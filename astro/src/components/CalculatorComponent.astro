<script>

    interface FinenessDetails {
        label: string;
        fineness: number;
    }

    let goldPricePerGram = 0;
    const API_URL = "https://gold-price-proxy.falling-grass-da27.workers.dev/";

    const finenessMap: Record<number, FinenessDetails> = {
        24: {label: '24k (999)', fineness: 1},
        22: {label: '22k (916)', fineness: 0.916},
        21: {label: '21k (900)', fineness: 0.900},
        18: {label: '18k (750)', fineness: 0.750},
        14: {label: '14k (585)', fineness: 0.585}
    };

    async function fetchGoldPrice() {
        const tableLoading = document.getElementById('table-loading');
        const calculatorLoading = document.getElementById('calculator-loading');
        const priceTable = document.getElementById('price-table');
        const calculatorContent = document.getElementById('calculator-content');

        // Show loading spinners
        if (tableLoading) tableLoading.style.display = 'flex';
        if (calculatorLoading) calculatorLoading.style.display = 'flex';
        if (priceTable) priceTable.style.display = 'none';
        if (calculatorContent) calculatorContent.style.display = 'none';

        try {
            const response = await fetch(API_URL);
            const data = await response.json();

            // gold_eur is price per troy ounce, convert to gram
            // 1 troy ounce = 31.1035 grams
            goldPricePerGram = data.gold_eur / 31.1035;

            console.log(`Gold price: ‚Ç¨${goldPricePerGram.toFixed(2)}/gram`);

            // Update price table
            updatePriceTable(goldPricePerGram);

            // Hide loading spinners and show content
            if (tableLoading) tableLoading.style.display = 'none';
            if (calculatorLoading) calculatorLoading.style.display = 'none';
            if (priceTable) priceTable.style.display = 'table';
            if (calculatorContent) calculatorContent.style.display = 'block';
        } catch (error) {
            console.error('Failed to fetch gold price:', error);
            updatePriceTable(0, true);

            // Hide loading spinners and show content (with error)
            if (tableLoading) tableLoading.style.display = 'none';
            if (calculatorLoading) calculatorLoading.style.display = 'none';
            if (priceTable) priceTable.style.display = 'table';
            if (calculatorContent) calculatorContent.style.display = 'block';
        }
    }


    function updatePriceTable(goldPricePerGram: number, error = false) {
        const priceTableBody = document.getElementById('price-table-body');
        if (!priceTableBody) return;

        if (error) {
            priceTableBody.innerHTML = `
            <tr>
                <td colspan="2" style="text-align: center; color: red;">Fehler beim Laden des Goldpreises</td>
            </tr>
        `;
            return;
        }

        priceTableBody.innerHTML = Object.entries(finenessMap)
            .sort(([a,], [b,]) => parseInt(b) - parseInt(a))
            .map(([karat, details]) => `
            <tr>
                <td>${details.label}</td>
                <td>‚Ç¨${(goldPricePerGram * details.fineness).toFixed(2).replace('.', ',')}</td>
            </tr>
        `).join('');
    }
    // Fetch on page load
    fetchGoldPrice();

    // Periodically refetch (e.g., every 5 minutes)
    setInterval(fetchGoldPrice, 5 * 60 * 1000);

    function formatEuro(amount: number): string {
        return amount.toFixed(2).replace('.', ',');
    }

    const calculateBtn = document.getElementById('calculate');
    const resultDiv = document.getElementById('result');


    if (calculateBtn && resultDiv) {
        calculateBtn.addEventListener('click', () => {
            const vendorPriceInput = (document.getElementById('vendor-price') as HTMLInputElement).value.replace(',', '.');
            const weightInput = (document.getElementById('weight') as HTMLInputElement).value.replace(',', '.');
            const karatSelect = document.getElementById('karat') as HTMLSelectElement;

            console.log(`${vendorPriceInput} ${weightInput} ${karatSelect}`);
            const vendorPrice = parseFloat(vendorPriceInput);
            const weight = parseFloat(weightInput);
            const karat = parseFloat(karatSelect.value);

            console.log(`${vendorPrice} ${weight} ${karat}`);

            if (isNaN(vendorPrice) || isNaN(weight) || isNaN(karat)) {
                resultDiv.textContent = 'Bitte f√ºllen Sie alle Felder aus';
                return;
            }

            if (vendorPrice <= 0) {
                resultDiv.textContent = 'Verkaufspreis muss positiv sein';
                return;
            }

            if (weight <= 0) {
                resultDiv.textContent = 'Gewicht muss positiv sein';
                return;
            }

            // Use type assertion to ensure karat is a valid key
            const fineness = finenessMap[karat as keyof typeof finenessMap].fineness;
            const spotprice = weight * goldPricePerGram * fineness;
            const difference = vendorPrice - spotprice;
            const differencePercentage = (difference / spotprice) * 100;
            const requiredSpotPricePerGram = vendorPrice / (weight * fineness);
            const requiredIncreasePercentage = ((requiredSpotPricePerGram - goldPricePerGram) / goldPricePerGram) * 100;



            console.log("spotprice", spotprice);
            console.log("difference", difference)
            console.log("differencePercentage", differencePercentage)

            // Color-code the difference based on its value
            const differenceColor = difference >= 0 ? 'red' : 'greed';
            const percentageColor = differencePercentage >= 0 ? 'red' : 'green';

            resultDiv.innerHTML = `
            <div><strong>Spot Preis:</strong> ‚Ç¨${formatEuro(spotprice)}</div>
            <div><strong>Differenz:</strong> <span style="color: ${differenceColor}">‚Ç¨${formatEuro(difference)}</span> 
            (<span style="color: ${percentageColor}">${formatEuro(differencePercentage)}% Aufpreis</span>)</div>
            <div style="margin-top: 10px;">
                <strong>
                    Der Goldkurs muss auf 
                    <span style="color: ${percentageColor}">‚Ç¨${formatEuro(requiredSpotPricePerGram)}/g</span> 
                    bzw. um 
                    <span style="color: ${percentageColor}">${formatEuro(requiredIncreasePercentage)}%</span>  
                    steigen um den Aufpreis wieder auszugleichen
                </strong>
            </div>
        `;
        });
    }
    // Optional TODO improvements:
    // - Add option to calculate spotpreis without vendor price
    // - Show how much gram price needs to increase to get invested money back
</script>

